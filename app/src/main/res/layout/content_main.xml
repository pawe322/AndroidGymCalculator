<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <!-- ADJUSTABLE SECTION -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_below="@+id/seekBar1"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/buttonMinusWeight"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView2"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-7dp"
        android:layout_toStartOf="@+id/seekBar1"
        android:layout_toLeftOf="@+id/seekBar1"
        android:text="@string/minusOne"
        android:textSize="29sp" />

    <Button
        android:id="@+id/buttonPlusWeight"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView2"
        android:layout_marginEnd="-265dp"
        android:layout_marginRight="-265dp"
        android:layout_marginBottom="-8dp"
        android:layout_toStartOf="@+id/seekBar1"
        android:layout_toLeftOf="@+id/seekBar1"
        android:text="@string/plusOne"
        android:textSize="29sp" />

    <!-- VIEW SECTION -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp">

            <TextView
                android:id="@+id/RM1string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/RM1"
                android:text="@string/RM1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM2string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM1string"
                android:text="@string/RM2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM3string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/RM3"
                android:text="@string/RM3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM4string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/RM4"
                android:text="@string/RM4"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM5string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM4string"
                android:text="@string/RM5"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM6string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM5string"
                android:text="@string/RM6"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM7string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM6string"
                android:text="@string/RM7"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM8string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM7string"
                android:text="@string/RM8"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM9string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM8string"
                android:text="@string/RM9"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM10string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM9string"
                android:text="@string/RM10"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM11string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
