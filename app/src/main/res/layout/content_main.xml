                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM9"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM8"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM10"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM9"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM11"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM10"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM12"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
