                android:layout_below="@+id/RM11string"
                android:text="@string/RM12"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM15string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM12string"
                android:text="@string/RM15"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM1"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM2"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM3"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM5"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RM4"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RM6"
                android:layout_width="130dp"
